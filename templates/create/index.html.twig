{% block title %}Hello CreateController!{% endblock %}

{% block body %}

<div class="container">
    {{ form_start(mangaListForm) }}
            <div class="form-group">
                {{ form_label(mangaListForm.name) }}
                {{ form_widget(mangaListForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(mangaListForm.episode_url) }}
                {{ form_widget(mangaListForm.episode_url, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(mangaListForm.episode_num) }}
                {{ form_widget(mangaListForm.episode_num, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    {{ form_end(mangaListForm) }}
</div>
{% endblock %}
